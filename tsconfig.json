{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "checkJs": false,
        "lib": ["es2020"],
        "module": "commonjs",
        "target": "es2019",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["index.js", ".eslintrc.js", "test/**/*", "types/**/*"],
    "ts-node": {
        "files": true,
        "transpileOnly": true
    }
}
